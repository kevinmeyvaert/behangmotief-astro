---
import Layout from '../../layouts/Layout.astro';
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from '../../i18n/utils';
import HeroCarousel from '@/components/HeroCarousel.astro';
import ImageLightbox from '@/components/ImageLightbox.astro';
import PortfolioHeader from '@/components/PortfolioHeader.astro';
import RecentWork from '@/components/RecentWork.astro';
import { Image } from 'astro:assets';
import BlurHashImage from '@/components/BlurHashImage.astro';
import ProjectCard from '@/components/ProjectCard.astro';

export async function getStaticPaths() {
  return [{ params: { locale: 'en' } }, { params: { locale: 'nl' } }];
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

const heroImages = [
  {
    src: 'https://images.wannabes.be/S=W1500,H1500,PD1/hires-2022-09-01-fred-again-pukkelpop-pukkelpop-2022-ddGxAQ4LgjCappsXZ.jpg',
    blurhash: 'LaMh*{+?I:x]VX~CIoM{E-57r[R-',
    alt: 'Fred Again.. at Pukkelpop 2022',
  },
  {
    src: 'https://images.wannabes.be/S=W1500,H1500,PD1/hires-2025-03-16-brihang-coretec-dome-CJr3j5ZJ3EAJPvZHX.jpg',
    blurhash: 'LQ5GD5MuZ}e-yGRMaJadRMo#W@ad',
    alt: 'Brihang at Coretec Dome',
  },
  {
    src: 'https://images.wannabes.be/S=W1500,H1500,PD1/hires-2023-08-25-bluai-pukkelpop-pukkelpop-2023-oJuRS65ode9TAe5JS.jpg',
    blurhash: 'LQ5GD5MuZ}e-yGRMaJadRMo#W@ad',
    alt: 'Bluai at Pukkelpop 2023',
  },
  {
    src: 'https://images.wannabes.be/S=W1500,H1500,PD1/hires-2023-07-14-nils-frahm-bijloke-gent-jazz-2023-gB27ZRBmSDoyfiK59.jpg',
    blurhash: 'LFG6:]0~0O~9}SAGI[NGIWSO$%Ip',
    alt: 'Nils Frahm at Gent Jazz 2023',
  },
];

const projects = [
  {
    title: 'Pukkelpop',
    imageUrl:
      'https://images.wannabes.be/S=W750,H750,PD1/hires-2022-09-01-tom-misch-pukkelpop-pukkelpop-2022-m3wSqYZ4GQkdBPjbb.jpg',
    searchTerm: 'Pukkelpop',
    blurhash: 'LaMh*{+?I:x]VX~CIoM{E-57r[R-',
  },
  {
    title: 'Gent Jazz',
    imageUrl:
      'https://images.wannabes.be/S=W750,H750,PD1/hires-2024-07-15-the-bony-king-of-nowhere-bijloke-gent-jazz-2024-KXsCzG2auBYwMdKr3.jpg',
    searchTerm: 'Gent Jazz',
    blurhash: 'LFG6:]0~0O~9}SAGI[NGIWSO$%Ip',
  },
  {
    title: 'Crammerock',
    imageUrl:
      'https://images.wannabes.be/S=W750,H750,PD1/hires-2024-09-08-equal-idiots-crammerock-crammerock-2024-ddKKYcpEnAwzu9mws.jpg',
    searchTerm: 'Crammerock',
    blurhash: 'LQ5GD5MuZ}e-yGRMaJadRMo#W@ad',
  },
  {
    title: 'Lokerse Feesten',
    imageUrl:
      'https://images.wannabes.be/S=W1024,H1024,PD1/hires-2022-08-06-froukje-lokerse-feesten-lokerse-feesten-2022-jcQohA95rNKsD6qbh.jpg',
    searchTerm: 'Lokerse Feesten',
    blurhash: 'LQ5GD5MuZ}e-yGRMaJadRMo#W@ad',
  },
  {
    title: 'Boomtown',
    imageUrl:
      'https://images.wannabes.be/S=W750,H750,PD1/hires-2024-07-20-klakmatrak-kouter-boomtown-2024-2erJnb73JKSBtsdhy.jpg',
    searchTerm: 'Boomtown',
    blurhash: 'LQ5GD5MuZ}e-yGRMaJadRMo#W@ad',
  },
  {
    title: 'Cactusfestival',
    imageUrl:
      'https://images.wannabes.be/S=W750,H750,PD1/hires-2023-07-10-shame-minnewaterpark-cactus-festival-2023-7NHWu3ePc4z2NJpfL.jpg',
    searchTerm: 'Cactusfestival',
    blurhash: 'LQ5GD5MuZ}e-yGRMaJadRMo#W@ad',
  },
];

export const prerender = true;
---

<Layout title={t('landing.title')} description={t('landing.description')}>
  <div class="w-full min-h-screen flex flex-col scroll-smooth">
    <PortfolioHeader />
    <main class="flex-grow">
      {/* Hero Section */}
      <section class="relative h-[100svh] flex items-center justify-center">
        <div class="absolute inset-0 z-0">
          <HeroCarousel images={heroImages} />
        </div>
        <div
          class="z-10 text-center text-white px-4 absolute bottom-0 left-0 right-0 pb-16"
        >
          <h1 class="text-3xl md:text-4xl font-bold mb-2">
            {t('hero.title')}
          </h1>
          <p class="text-md md:text-xl mb-8">
            {t('hero.subtitle')}
          </p>
          <a
            href="#about"
            data-scroll-to="about"
            class="inline-block bg-white text-black px-6 py-3 text-md font-semibold hover:bg-gray-100 transition-colors rounded-lg"
          >
            {t('hero.cta')}
          </a>
        </div>
      </section>
      {/* Split Section */}
      <section
        id="about"
        class="min-h-[100svh] flex items-center justify-center relative"
      >
        <div class="absolute bottom-0 right-0 -z-1 hidden md:block">
          <Image
            src="/corner-element-light.jpg"
            alt=""
            width={350}
            height={350}
            role="presentation"
          />
        </div>
        <div class="container mx-auto">
          <div class="flex flex-col-reverse md:flex-row gap-8">
            <div class="w-full md:w-1/2">
              <ImageLightbox
                imageSrc="/cactus-grid-liggend-klein.jpg"
                imageAlt="Cactusfestival social media grid"
              />
            </div>
            <div
              class="w-full md:w-1/2 flex items-center justify-center px-8 md:p-16"
            >
              <div class="max-w-lg">
                <h2 class="text-3xl font-bold mb-6">
                  {t('about.title')}
                </h2>
                <p class="text-gray-600 mb-6">
                  {t('about.description1')}
                </p>
                <p class="text-gray-600 mb-6">
                  {t('about.description2')}
                </p>
                <p>
                  <a
                    href={translatePath('grid')}
                    class="inline-block bg-black text-white px-3 py-1.5 text-sm font-semibold hover:bg-gray-800 transition-colors rounded-md"
                  >
                    {t('about.cta')}
                  </a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>
      {/* Services Section */}
      <section class="bg-gray-100 py-32">
        <div class="container mx-auto text-center px-4 md:px-0">
          <h2
            class="text-3xl font-bold mb-12 border-b-2 border-black inline-block"
          >
            {t('services.title')}
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="text-center">
              <div class="mb-4 aspect-[3/2] bg-gray-200 w-full">
                <BlurHashImage
                  src="https://images.wannabes.be/S=W750,H750,PD1/hires-2023-08-25-bazart-pukkelpop-pukkelpop-2023-3TYMWAhLZjwcWMzG3.jpg"
                  alt="Bazart at Pukkelpop 2023"
                  blurhash="LPCQMi^+s,%2.T-o%2t7tSxuxaof"
                  width={750}
                  height={500}
                />
              </div>
              <div class="px-6 pb-6">
                <h3 class="text-xl font-semibold mb-4">
                  {t('services.festival.title')}
                </h3>
                <p class="text-gray-600">
                  {t('services.festival.description')}
                </p>
              </div>
            </div>
            <div class="text-center">
              <div class="mb-4 aspect-[3/2] bg-gray-200 w-full">
                <BlurHashImage
                  src="https://images.wannabes.be/S=750,750,PD1/hires-2024-08-23-loverman-pukkelpop-pukkelpop-2024-MnSPuDodE96b6hJn2.jpg"
                  alt="Loverman at Pukkelpop 2024"
                  blurhash="LUL2w[%L0MxA~8s.Ip$$ROsRt8Si"
                  width={750}
                  height={500}
                />
              </div>
              <div class="px-6 pb-6">
                <h3 class="text-xl font-semibold mb-4">
                  {t('services.concert.title')}
                </h3>
                <p class="text-gray-600">
                  {t('services.concert.description')}
                </p>
              </div>
            </div>
            <div class="text-center">
              <div class="mb-4 aspect-[3/2] bg-gray-200 w-full overflow-hidden">
                <BlurHashImage
                  src="/cactus-grid-liggend-klein.jpg"
                  alt="Cactusfestival social media grid"
                  blurhash="L5C=b{0OcI^8rn,-ASStVJ];ENtm"
                  width={750}
                  height={500}
                />
              </div>
              <div class="px-6 pb-6">
                <h3 class="text-xl font-semibold mb-4">
                  {t('services.social.title')}
                </h3>
                <p class="text-gray-600">
                  {t('services.social.description')}
                </p>
              </div>
            </div>
            <div class="text-center">
              <div class="mb-4 aspect-[3/2] bg-gray-200 w-full overflow-hidden">
                <BlurHashImage
                  src="/workshop.jpg"
                  alt="Workshop"
                  blurhash="LJOMgEt6u5V[?^ofVse.%OjFWTof"
                  width={750}
                  height={500}
                  class="-translate-y-15"
                />
              </div>
              <div class="px-6 pb-6">
                <h3 class="text-xl font-semibold mb-4">
                  {t('services.workshops.title')}
                </h3>
                <p class="text-gray-600">
                  {t('services.workshops.description')}
                </p>
              </div>
            </div>
            <div class="text-center">
              <div class="mb-4 aspect-[3/2] bg-gray-200 w-full">
                <BlurHashImage
                  src="https://images.wannabes.be/S=W750,H750,PD1/hires-2024-03-14-loverman-vooruit-M4z7NrkpT52j9JtBn.jpg"
                  alt="Week van de Belgische Muziek"
                  blurhash="L9BM_P~q000000ay?b-;004n-;-;"
                  width={750}
                  height={500}
                />
              </div>
              <div class="px-6 pb-6">
                <h3 class="text-xl font-semibold mb-4">
                  {t('services.licensing.title')}
                </h3>
                <p class="text-gray-600">
                  {t('services.licensing.description')}
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>
      {/* Portfolio Grid */}
      <section class="w-full bg-black text-white relative">
        <div class="absolute bottom-0 right-0 z-0">
          <Image
            src="/corner-element.jpg"
            alt=""
            width={350}
            height={350}
            role="presentation"
          />
        </div>
        <div class="absolute bottom-0 left-0 z-0 hidden md:block">
          <Image
            src="/corner-element.jpg"
            alt=""
            width={350}
            height={350}
            style="transform: scaleX(-1);"
            role="presentation"
          />
        </div>
        <div class="py-16 relative z-10">
          <div class="container mx-auto px-4 text-center">
            <h2
              class="text-3xl font-bold mb-12 border-b-2 border-white inline-block"
            >
              {t('portfolio.title')}
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {
                projects.map((project) => (
                  <ProjectCard
                    title={project.title}
                    imageUrl={project.imageUrl}
                    searchTerm={project.searchTerm}
                    translatePath={translatePath}
                    blurhash={project.blurhash}
                  />
                ))
              }
            </div>
          </div>
        </div>
      </section>
      {/* Contact Section */}
      <section class="container mx-auto px-4 py-32">
        <div class="max-w-2xl mx-auto text-center">
          <h2
            class="text-3xl font-bold mb-6 border-b-2 border-black inline-block"
          >
            {t('collaborate.title')}
          </h2>
          <p class="text-gray-600 mb-8">
            {t('collaborate.description')}
          </p>
          <a
            href="mailto:hallo@behangmotief.be"
            class="inline-block bg-black text-white px-6 py-3 text-md font-semibold hover:bg-gray-800 transition-colors rounded-lg"
          >
            {t('collaborate.cta')}
          </a>
        </div>
      </section>
      {/* Recent Work Section */}
      <RecentWork server:defer />
      <section class="container mx-auto px-4 py-32">
        <div class="max-w-2xl mx-auto text-center">
          <h2
            class="text-3xl font-bold mb-6 border-b-2 border-black inline-block"
          >
            {t('archiveSection.title')}
          </h2>
          <p class="text-gray-600 mb-8">
            {t('archiveSection.description')}
          </p>
          <a
            href={translatePath('/archive')}
            class="inline-block bg-black text-white px-6 py-3 text-md font-semibold hover:bg-gray-800 transition-colors rounded-lg"
          >
            {t('archiveSection.cta')}
          </a>
        </div>
      </section>
    </main>
  </div>
</Layout>

<script>
  document
    .querySelector('[data-scroll-to="about"]')
    ?.addEventListener('click', (e) => {
      e.preventDefault();
      document.getElementById('about')?.scrollIntoView({ behavior: 'smooth' });
    });
</script>
